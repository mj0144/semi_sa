<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="defaultTemplate"
	template="/WEB-INF/template/default/template.jsp">
	<put-attribute name="header"
	value="/WEB-INF/template/default/header.jsp"/>
	<put-attribute name="side" value="/WEB-INF/template/default/side.jsp"/>
	<put-attribute name="footer" value="/WEB-INF/template/default/footer.jsp"/>
	</definition>
	<definition name="*/*" extends="defaultTemplate">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
</tiles-definitions>